<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="proyecto.proyectobookit.fragment.Get_Perfil">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/get_perfil_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:border_width="2dp"
                app:border_color="#FF000000"
                android:layout_gravity="top|left"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="7dp"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/get_perfil_labelnombre"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/get_perfil_tamañoletra_enunciado"
                        android:text="Nombre"/>

                    <TextView
                        android:id="@+id/get_perfil_nombre"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/get_perfil_tamañoletra_respuesta"
                        android:text="Juan Pérez "/>

            </LinearLayout>
        </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/get_perfil_labelUniversidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/get_perfil_tamañoletra_enunciado"
                android:text="Universidad"/>

            <TextView
                android:id="@+id/get_perfil_universidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/get_perfil_tamañoletra_respuesta"
                android:text="@string/sin_informacion"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/get_perfil_labelCarrera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/get_perfil_tamañoletra_enunciado"
                android:text="Carrera"/>

            <TextView
                android:id="@+id/get_perfil_carrera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/get_perfil_tamañoletra_respuesta"
                android:text="@string/sin_informacion"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/get_perfil_labeltelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/get_perfil_tamañoletra_enunciado"
                android:text="Telefono"/>

            <TextView
                android:id="@+id/get_perfil_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/get_perfil_tamañoletra_respuesta"
                android:text="@string/sin_informacion"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/get_perfil_labelCurriculum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/get_perfil_tamañoletra_enunciado"
                android:text="Biografía Academica"/>

            <ScrollView
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/get_perfil_curriculum"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:textSize="@dimen/get_perfil_tamañoletra_respuesta"
                        android:layout_gravity="center"
                        android:text="@string/sin_informacion"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout android:id="@+id/bottom_menu"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="-10dp"
                android:id="@+id/get_perfil_linea_curva"
                android:layout_alignParentBottom="true"
                android:background="@drawable/linea_curva"
                android:layout_gravity="bottom" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
